{% extends "../base.njk" %}

{% block title -%}
  &ndash; {{ title }}
{%- endblock %}

{% block content %}

  <article class="article">

    <div class="article__header">
      <h1 class="article__title">
        {{ title }}
      </h1>
      <time
        class="article__datetime"
        datetime="{{ date | datetimeAttribute }}"
        title="{{ date | fullDate }}"
      >
        {{ date | dateHowLongBefore }}
      </time>
    </div>

    <div class="article__content">
      {{ article | safe }}
    </div>

  </article>

{% endblock %}
