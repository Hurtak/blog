{% extends "../base.njk" %}

{% block title %}
  &ndash; {{ title }}
{% endblock %}

{% block content %}

  <article class="article">
    <h1>
      {{ title }}
    </h1>
    <time
      datetime="{{ date | datetimeAttribute }}"
      title="{{ date | fullDate }}"
    >
      {{ date | dateHowLongBefore }}
    </time>

    {{ article | safe }}

  </article>

{% endblock %}
