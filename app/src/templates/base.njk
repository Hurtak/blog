<!DOCTYPE html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <title>hurtak.cz {% block title %}{% endblock %}</title>

    <link rel="icon" type="image/png" href="/static/images/favicon.png" sizes="16x16">

    {% if devel -%}
      <link rel="stylesheet" type="text/css" href="/static/styles/debug/debug-reset.css">
      <link rel="stylesheet" type="text/css" href="/static/styles/debug/debug-templates.css">
    {%- endif %}
    <link rel="stylesheet" type="text/css" href="/static/styles/styles.css">

    {# TODO: update title url #}
    <link rel="alternate" type="application/rss+xml" title="hurtak.cz" href="/rss">
    <link type="text/plain" rel="author" href="/humans.txt">

  </head>
  <body>

    {# page #}
    <div class="PageWrapper">

      <div class="Content">
        {% include 'components/header.njk' %}

        <main>
          {% block content %}{% endblock %}
        </main>

        {% include 'components/footer.njk' %}
      </div>

    </div>

    {# data for scripts #}
    <script>
      (function () {
        'use strict'

        window.appData = {}
        window.App = {}
      }())
    </script>
    {% block scriptVariables %}{% endblock %}

    {# scripts #}
    <script src="/static/scripts/components/log.js"></script>
    <script src="/static/scripts/components/snippets.js"></script>
    <script src="/static/scripts/app.js"></script>
    <script>
      window.App.Main.init(window.appData)
    </script>

    {# debug #}
    {% if devel %}
      <code class="DebugTemplates"><pre>{{ getDebugData() | stringifyObject }}</pre></code>
    {% endif %}

  </body>
</html>
